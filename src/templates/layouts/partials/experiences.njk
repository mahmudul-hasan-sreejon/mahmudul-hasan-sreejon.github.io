      <!-- experiences section start -->
      <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="experience">
        <div class="my-auto">

          <h2 class="mb-5">Experience</h2>


          {% for field in experiencesSection %}
          <div class="resume-item d-flex flex-column flex-md-row mb-5">
            <div class="resume-content mr-auto">
              <h3 class="mb-0">{{field.designation}}</h3>
              <div class="subheading mb-3">{{field.company}}</div>

              <ul class="fa-ul mb-0">
                {% for activity in field.activities %}
                <li>
                  <i class="fa-li fa fa-check text-warning"></i>
                  {{activity}}
                </li>
                {% endfor %}
              </ul>
            </div>

            <div class="resume-date text-md-right">
              <b><span class="text-primary">{{field.duration}}</span></b>
            </div>
          </div>
          {% endfor %}
        </div>
      </section>
      <!-- experiences section end -->