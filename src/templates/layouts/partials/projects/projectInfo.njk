      <!-- project infos start -->

      {% for project in projectInfo %}
      <div class="project-modal mfp-hide mfp-with-anim" id="{{project.id}}">
        <div class="project-modal-dialog bg-white">

          <a class="close-button d-none d-md-block project-modal-dismiss" href="#">
            <i class="fa fa-3x fa-times"></i>
          </a>

          <div class="container text-center">
            <div class="row">
              <div class="col-lg-8 mx-auto">

                <h2 class="text-uppercase mb-0">{{project.name}}</h2>

                <hr class="mb-2">

                <img class="img-fluid mb-5 project-modal-img" src="{{project.image.src}}" alt="{{project.image.alt}}">

                <p class="mb-3">
                  {{project.description | safe}}
                </p>

                <p class="mb-5">
                  <b class="text-uppercase">Project Link: </b><a class="new-tab-open" href="{{project.link}}" style="text-decoration: none">{{project.name}}</a>
                  <b class="text-uppercase">Date: </b>{{project.duration}}
                </p>

                <a class="btn btn-danger rounded-pill project-modal-dismiss" href="#">
                  <i class="fas fa-times"></i>
                  CLOSE
                </a>

              </div>
            </div>
          </div>

        </div>
      </div>
      {% endfor %}

      <!-- project infos end -->